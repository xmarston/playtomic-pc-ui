generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model PageView {
  id         String   @id @default(uuid())
  timestamp  DateTime @default(now())
  path       String
  referrer   String?
  userAgent  String?
  browser    String?
  sessionId  String
  screenSize String?
  language   String?

  @@index([timestamp])
  @@index([path])
  @@index([sessionId])
  @@index([browser])
}
